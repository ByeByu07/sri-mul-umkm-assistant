{
	"name": "template-saas-starter",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "next dev --turbopack",
		"build": "next build",
		"start": "next start",
		"lint": "next lint",
		"db:create:migration": "npx wrangler d1 migrations create your-database-name",
		"db:migrate:remote": "npx wrangler d1 migrations apply your-database-name --remote && npm run codegen",
		"db:migrate:local": "npx wrangler d1 migrations apply your-database-name --local && npm run codegen",
		"cf:secret:bulk": "wrangler secret bulk .env.secret",
		"codegen": "npx kysely-codegen",
		"deploy": "opennextjs-cloudflare build && opennextjs-cloudflare deploy",
		"preview": "opennextjs-cloudflare build && opennextjs-cloudflare preview",
		"cf-typegen": "wrangler types --env-interface CloudflareEnv ./cloudflare-env.d.ts"
	},
	"dependencies": {
		"@better-fetch/fetch": "^1.1.18",
		"@dnd-kit/core": "^6.3.1",
		"@dnd-kit/modifiers": "^9.0.0",
		"@dnd-kit/sortable": "^10.0.0",
		"@dnd-kit/utilities": "^3.2.2",
		"@opennextjs/cloudflare": "^1.3.0",
		"@radix-ui/react-avatar": "^1.1.10",
		"@radix-ui/react-checkbox": "^1.3.2",
		"@radix-ui/react-dialog": "^1.1.14",
		"@radix-ui/react-dropdown-menu": "^2.1.15",
		"@radix-ui/react-label": "^2.1.7",
		"@radix-ui/react-select": "^2.2.5",
		"@radix-ui/react-separator": "^1.1.7",
		"@radix-ui/react-slot": "^1.2.3",
		"@radix-ui/react-tabs": "^1.1.12",
		"@radix-ui/react-toggle": "^1.1.9",
		"@radix-ui/react-toggle-group": "^1.1.10",
		"@radix-ui/react-tooltip": "^1.2.7",
		"@tabler/icons-react": "^3.34.0",
		"@tanstack/react-table": "^8.21.3",
		"better-auth": "^1.2.9",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"drizzle-kit": "^0.31.4",
		"drizzle-orm": "^0.44.3",
		"kysely": "^0.28.2",
		"kysely-codegen": "^0.18.5",
		"kysely-d1": "^0.4.0",
		"lucide-react": "^0.518.0",
		"midtrans-client": "^1.4.3",
		"negotiator": "^1.0.0",
		"next": "15.3.3",
		"next-intl": "^4.1.0",
		"next-themes": "^0.4.6",
		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"recharts": "^2.15.3",
		"simple-icons": "^15.6.0",
		"sonner": "^2.0.5",
		"tailwind-merge": "^3.3.1",
		"vaul": "^1.1.2",
		"zod": "^3.25.67",
		"zustand": "^5.0.6"
	},
	"devDependencies": {
		"@eslint/eslintrc": "^3",
		"@tailwindcss/postcss": "^4",
		"@types/better-sqlite3": "^7.6.13",
		"@types/negotiator": "^0.6.4",
		"@types/node": "^20.19.1",
		"@types/react": "^19",
		"@types/react-dom": "^19",
		"eslint": "^9",
		"eslint-config-next": "15.3.3",
